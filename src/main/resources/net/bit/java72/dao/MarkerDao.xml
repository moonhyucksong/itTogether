<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="net.bit.java72.dao.MarkerDao">

  <resultMap type="Marker" id="MarkerMap">
    <id     column="markerNo" property="markno"/>
    <result column="mlat"     property="latitude"/>
    <result column="mlon"     property="longitude"/>
    <result column="mtitle"   property="title"/>
    <result column="mcontnt"  property="content"/>
    <result column="mphoto"   property="markPhoto"/>
  </resultMap>
  
  <select id="markMyMarker" resultMap="MarkerMap">
    select * from marker_t
    where mno = 1;
  </select>
    
</mapper>